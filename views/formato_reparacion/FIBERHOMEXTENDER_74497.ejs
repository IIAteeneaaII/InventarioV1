<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CAPTURA REPARACIONES - Producto</title>

  <link rel="stylesheet" href="/css/formatoD.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/js/sweetalert-controller.js"></script>
</head>
<body>
  <div class="app-container app-col">
    <!-- Usuario -->
    <div class="top-right">
      <img src="/img/usuario.webp" alt="Usuario" class="user-icon" />
      <div class="username" id="username-display"><%= user.userName %></div>
      <div class="user-info">
        <div class="logout-container">
          <i class="fas fa-right-from-bracket logout-icon" id="logout-icon" title="Cerrar sesión"></i>
        </div>
      </div>
    </div>

    <!-- FORM STICKY ARRIBA -->
    <div class="form-section form-bar form-sticky">
      <h1><%= skuNombre %> - <%= skuItem %></h1>

        <div class="form-grid">
  <!-- S/N -->
  <div class="fg" id="ns-group">
    <label class="required" for="sn-input">S/N</label>
    <input type="text" id="sn-input" placeholder="Escanee o ingrese el número de serie" autocomplete="off">
  </div>

  <!-- Diagnóstico previo -->
  <div class="fg">
    <label for="diagnostico-previo">Diagnóstico previo (TestInicial/Retest)</label>
    <input type="text" id="diagnostico-previo" placeholder="Se llenará al escanear S/N" readonly>
  </div>

  <!-- Código reparación -->
  <div class="fg">
    <label class="required" for="reparaciones-input">Código de reparación</label>
    <select id="reparaciones-input" name="reparaciones" disabled>
      <option value="">Seleccione código de reparación</option>
    </select>
  </div>

  <!-- Nivel (readonly) -->
  <div class="fg">
    <label class="required" for="nivel-input">Nivel de reparación</label>
    <input type="text" id="nivel-input" name="nivel" placeholder="Se llenará automáticamente" readonly>
  </div>

  <!-- Técnico (editable) -->
  <div class="fg">
    <label class="required" for="tecnico-input">Técnico reparador</label>
    <input type="text" id="tecnico-input" name="tecnico" placeholder="Nombre del técnico" autocomplete="off">
  </div>

  <!-- SCRAP: botón que se desplaza a la derecha al activar + campo SCRAP (mismo ancho) -->
  <div class="fg scrap-inline">
    <label>&nbsp;</label>
    <div class="scrap-row" id="scrap-row">
      <input type="text" id="scrap-captura" class="scrap-campo" placeholder="Captura SCRAP (cuando está ON)">
      <button class="btn-toggle is-off" id="scrap-toggle" title="SCRAP desactivado">
        <i class="fas fa-recycle"></i> SCRAP: OFF
      </button>
    </div>
  </div>

  <!-- Conteo: MISMA COLUMNA que “Nivel”, pero en la fila del “Técnico” -->
<div class="fg conteo-slot">
  <button type="button" class="btn-conteo w-100" id="btn-conteo">
    <i class="fas fa-chart-bar" aria-hidden="true"></i> Conteo
  </button>
</div>


  <!-- Acciones (justo debajo del form, sin tanto espacio) -->
  <div class="fg actions">
    <button class="btn-confirmar" id="guardar-btn" disabled>
      <i class="fas fa-save"></i> GUARDAR REPARACIÓN
    </button>
    <div class="status-indicator"><span class="ready" id="status-msg">Listo para escanear</span></div>
  </div>
</div>


    <!-- HISTORIAL debajo -->
    <div class="table-section">
      <h1>Historial de Reparaciones</h1>

      <div class="historial-search">
        <div class="search-bar">
          <i class="fas fa-search search-icon" aria-hidden="true"></i>
          <input
            type="text"
            id="historial-search"
            class="search-input"
            placeholder="        Buscar (usuario, N/S, fecha, diagnóstico, clave, reparación, nivel, técnico)…"
            autocomplete="off"
            aria-label="Buscar en historial de reparaciones"
          />
          <span id="search-count" class="search-count" aria-live="polite"></span>
        </div>
      </div>

      <div class="table-container">
        <table class="registros-table" id="tabla-reparaciones">
          <thead>
            <tr>
              <th>ID (Usuario)</th>
              <th>N/S</th>
              <th>Fecha</th>
              <th>Diagnóstico previo</th>
              <th>Clave</th>
              <th>Reparación</th>
              <th>Nivel</th>
              <th>Técnico</th>
            </tr>
          </thead>
          <tbody id="registros-body">
            <% if (typeof registros !== 'undefined' && registros.length > 0) { %>
              <% registros.forEach(registro => { %>
                <%
                  var _user = registro.user ? (registro.user.nombre || registro.user.userName) : 'N/A';
                  var _diag = registro.diagnosticoPrevio || registro.diagnostico || 'N/A';
                  var _clave = registro.clave || registro.codigoReparacion || registro.codigo || 'N/A';
                  var _repNom = registro.reparacion || registro.reparaciones || 'N/A';
                  var _nivel = registro.nivel || 'N/A';
                  var _tec = registro.tecnico || registro.tecnicoReparador || 'N/A';
                %>
                <tr>
                  <td><%= _user %></td>
                  <td><%= registro.sn %></td>
                  <td><%= new Date(registro.createdAt).toLocaleString('es-MX') %></td>
                  <td><%= _diag %></td>
                  <td><%= _clave %></td>
                  <td><%= _repNom %></td>
                  <td><%= _nivel %></td>
                  <td><%= _tec %></td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- Botón Volver AHORA debajo del historial -->
      <div class="historial-actions">
        <button id="volver-btn" class="btn-secondary">
          <i class="fas fa-arrow-left"></i> Volver
        </button>
      </div>
    </div>
  </div>

  <!-- DATA & Scripts -->
  <script>window._registros = JSON.parse(`<%- JSON.stringify(registros || []) %>`);</script>
  <script src="/js/cerrarsesion.js"></script>
  <script src="/js/reparaciones-captura.js?v=1758660009013" defer></script>
  <script src="/js/historial-search.js" defer></script>

  <!-- MODAL CONTEO -->
  <div class="modal-overlay" id="conteo-modal" style="display:none;">
    <div class="modal">
      <div class="modal-header">
        <h3>Conteo por diagnóstico</h3>
        <button class="modal-close" id="conteo-close" aria-label="Cerrar">&times;</button>
      </div>
      <div class="modal-body">
        <div class="conteo-total">Total: <span id="conteo-total">0</span></div>
        <table class="stats-table">
          <thead><tr><th>Diagnóstico</th><th>Cantidad</th></tr></thead>
          <tbody id="conteo-tbody"><tr><td colspan="2">Sin datos</td></tr></tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button class="btn-mini" id="conteo-refresh"><i class="fas fa-rotate"></i> Actualizar</button>
        <button class="btn-mini" id="conteo-ok">Cerrar</button>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      window.user = window.user || JSON.parse(`<%- JSON.stringify(user || {}) %>`);
      const volver = document.getElementById('volver-btn');
      if (volver) volver.addEventListener('click', () => window.history.back());
    });
  </script>
</body>
<div class="modal-overlay" id="conteo-modal" style="display:none;">
  <div class="modal">
    <div class="modal-header">
      <h3>Conteo de capturas</h3>
      <button class="modal-close" id="conteo-close" aria-label="Cerrar">&times;</button>
    </div>
    <div class="modal-body">
      <table class="stats-table" id="conteo-table">
        <thead>
          <tr><th>Tipo</th><th>Cantidad</th></tr>
        </thead>
        <tbody id="conteo-tbody">
          <tr class="section"><td colspan="2">Diagnóstico (escaneos)</td></tr>
          <!-- filas dinámicas diagnóstico -->
          <tr class="section"><td colspan="2">Código de reparación (guardados)</td></tr>
          <!-- filas dinámicas reparación -->
        </tbody>
      </table>
    </div>
    <div class="modal-footer">
      <span class="conteo-total">Total escaneos: <strong id="conteo-total">0</strong></span>
      <button class="btn-conteo btn-conteo-ghost" id="conteo-refresh">
        <i class="fas fa-rotate" aria-hidden="true"></i> Actualizar
      </button>
      <button class="btn-conteo btn-conteo-ghost" id="conteo-ok">Cerrar</button>
    </div>
  </div>
</div>

</html>
