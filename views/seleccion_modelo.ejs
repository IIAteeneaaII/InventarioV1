        .priority-label {
            font-size: 0.75rem;
            text-align: center;
            line-height: 1.1;
        }

        .submit-ticket-btn {
            width: 100%;
            padding: 14px;
            background: linear-gradient(to right, #2ecc71, #27ae60);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(39, 174, 96, 0.3);
        }

        .submit-ticket-btn:hover {
            background: linear-gradient(to right, #27ae60, #219653);
