<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>CAPTURA NÚMEROS DE SERIE</title>

  <!-- CSS base (mismo stack que el correcto) -->
  <link rel="stylesheet" href="/css/formatoC.css" />
  <link rel="stylesheet" href="/css/escaneo.css" />

  <!-- Librerías -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />

  <!-- Utilidades -->
  <script src="/js/userSafety.js"></script>
  <script src="/js/sweetalert-controller.js"></script>
</head>
<body>
  <!-- HEADER FIJO (fuera del app-container, como en el correcto) -->
  <div class="top-right">
    <img src="/img/usuario.webp" alt="Usuario" class="user-icon" />
    <div class="username" id="username-display"><%= (user && (user.nombre || user.userName)) ? (user.nombre || user.userName) : 'Registro' %></div>
    <div class="user-info">
      <div class="logout-container">
        <i class="fas fa-right-from-bracket logout-icon" id="logout-icon" title="Cerrar sesión"></i>
      </div>
    </div>
  </div>

  <!-- SPACER para que el header NO tape el contenido (sin tocar CSS) -->
  <div style="height:72px;"></div>

  <!-- CONTENEDOR PRINCIPAL -->
  <div class="app-container">
    <!-- Sección del formulario -->
    <div class="form-section">
      <h1><%= typeof tituloLote !== 'undefined' ? tituloLote : '4K ALEXA - 73488' %></h1>

      <!-- Instrucciones -->
      <div class="instrucciones">
        <p><strong>Instrucciones:</strong></p>
        <ul>
          <li>Escanee o ingrese el número de serie (S/N).</li>
          <li>Para SCRAP: <strong>active botón (ON)</strong> y <strong>seleccione un motivo</strong>.</li>
        </ul>
      </div>

      <div class="form-group">
        <label class="required">S/N</label>
        <input type="text" id="sn-input" placeholder="Ingrese el número de serie" />
      </div>

      <!-- Motivo SCRAP (se muestra solo cuando SCRAP = ON) -->
      <div class="form-group motivo-scrap-group" hidden>
        <input type="text" id="scrap-input" name="scrap" hidden />
        <label class="required" for="motivo-scrap">Motivo de Scrap</label>
        <select id="motivo-scrap" name="motivoScrap">
          <option value="">Seleccione un motivo</option>
          <option value="cosmetica">Cosmética</option>
          <option value="electronica">Electrónica</option>
          <option value="infestado">Infestado</option>
        </select>
      </div>

      <!-- Botón Guardar -->
      <button class="btn-confirmar" id="guardar-btn">
        <i class="fas fa-save"></i> GUARDAR REGISTRO
      </button>

      <!-- Botón SCRAP ON/OFF (inicia OFF) -->
      <button class="btn-toggle is-off" id="autoenter-toggle" title="SCRAP desactivado">
        <i class="fas fa-keyboard"></i> SCRAP: OFF
      </button>

//Boton finalizar lote//

      <div class="status-indicator"><span class="ready">Listo para escanear</span></div>

      <div class="acciones-container">
        <button class="btn-descargar" id="descargar-btn">
          <i class="fas fa-download"></i> Descargar
        </button>
      </div>

      <!-- Botón Volver -->
      <div class="volver-container">
        <button id="volver-btn" class="btn-volver">
          <i class="fas fa-arrow-left"></i> Volver
        </button>
      </div>
    </div>

    <!-- Sección de la tabla -->
    <div class="table-section">
      <h1>Historial de Registros</h1>

      <!-- Búsqueda -->
      <div class="historial-search">
        <div class="search-bar">
          <i class="fas fa-search search-icon" aria-hidden="true"></i>
          <input
            type="text"
            id="historial-search"
            class="search-input"
            placeholder="Buscar en historial (usuario, N/S, fecha, registro, tipo)…"
            autocomplete="off"
            aria-label="Buscar en historial de registros"
          />
        </div>
      </div>

      <div class="table-container">
        <table class="registros-table">
          <thead>
            <tr>
              <th>ID (Usuario)</th>
              <th>N/S</th>
              <th>Fecha</th>
              <th>Registro</th>
              <th>Tipo</th>
            </tr>
          </thead>
          <tbody id="registros-body">
            <% if (Array.isArray(registros) && registros.length > 0) { %>
              <% registros.forEach(registro => { %>
                <tr class="<%= registro.estado && registro.estado.includes('SCRAP') ? 'fila-scrap' : '' %>">
                  <td><%= (registro.user && (registro.user.nombre || registro.user.userName)) ? (registro.user.nombre || registro.user.userName) : 'N/A' %></td>
                  <td><%= registro.sn %></td>
                  <td><%= registro.createdAt ? new Date(registro.createdAt).toLocaleString('es-MX') : '—' %></td>
                  <td><%= registro.estado || '—' %></td>
                  <td><%= registro.motivoScrap ? registro.motivoScrap.replace(/_/g, ' ') : 'N/A' %></td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr><td colspan="5">Sin registros</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Librerías -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <!-- Scripts existentes -->
  <script src="/js/cerrarsesion.js"></script>
  <script src="/js/formato-captura.js"></script>
  <script src="/js/scrap-toggle.js" defer></script>
  <script src="/js/historial-search.js" defer></script>

  <!-- Inicialización -->
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      window.user = window.user || JSON.parse(`<%- JSON.stringify(user || {}) %>`);

      // Descargar tabla
      const descargarBtn = document.getElementById('descargar-btn');
      if (descargarBtn) {
        descargarBtn.addEventListener('click', function () {
          const tabla = document.querySelector('.registros-table');
          if (!tabla) return Swal.fire('Error', 'No se encontró la tabla de registros.', 'error');
          const tablaHTML = tabla.outerHTML.replace(/ /g, '%20');
          const enlace = document.createElement('a');
          enlace.href = 'data:application/vnd.ms-excel,' + tablaHTML;
          enlace.download = 'Empaque_4K_Alexa.xls';
          document.body.appendChild(enlace);
          enlace.click();
          document.body.removeChild(enlace);
        });
      }

      // Volver
      const volverBtn = document.getElementById('volver-btn');
      if (volverBtn) volverBtn.addEventListener('click', () => window.history.back());

      // Refresca nombre
      const usernameDisplay = document.getElementById('username-display');
      if (usernameDisplay && window.user && (window.user.userName || window.user.nombre)) {
        usernameDisplay.textContent = window.user.nombre || window.user.userName;
      }
    });
  </script>
</body>
</html>
